{
  "devDependencies": {
    "@testing-library/dom": "^10.4.1",
    "jasmine-spec-reporter": "^7.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "scripts": {
    "preprocess:html": "mvn exec:java -Dexec.mainClass=\"com.tallerwebi.preparacion.ThymeleafPreProcessor\" -Dexec.classpathScope=\"test\" -Dexec.args=\"login src/test/web/resources/data/login.json\"",
    "test:frontend": "jest src/test/web/javascript/",
    "test": "npm run preprocess:html && npm run test:frontend"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "testEnvironmentOptions": {
      "resources": "usable",
      "runScripts": "dangerously"
    }
  }
}
